<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Tasks for <%= classInfo.name %></title>
    <style>
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            padding: 10px;
            margin-bottom: 5px;
            background-color: #f0f0f0;
            border-radius: 5px;
        }
        a {
            text-decoration: none;
            color: black;
        }
        button {
            cursor: pointer;
            padding: 10px 20px;
            margin-top: 20px;
            border: none;
            background-color: #007BFF;
            color: white;
            border-radius: 5px;
            font-size: 16px;
        }
        button:hover {
            background-color: #0056b3;
        }
        input, textarea {
            width: 95%;
            padding: 12px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <h1>Manage Tasks for <%= classInfo.name %></h1>

    <h2>Existing Tasks</h2>
    <ul>
        <% if (classInfo.tasks && classInfo.tasks.length > 0) { %>
            <% classInfo.tasks.forEach(function(task) { %>
                <li>
                    <%= task.description %>
                    <form action="/teachers/delete-task/<%= task._id %>" method="post" style="display:inline;">
                        <input type="hidden" name="classId" value="<%= classInfo._id %>">
                        <button type="submit">Delete</button>
                    </form>
                    <form action="/teachers/edit-task/<%= task._id %>" method="get" style="display:inline;">
                        <input type="hidden" name="classId" value="<%= classInfo._id %>">
                        <button type="submit">Edit</button>
                    </form>
                </li>
            <% }) %>
        <% } else { %>
            <li>No tasks assigned</li>
        <% } %>
    </ul>

    

    <button onclick="history.back()">Back to Classes</button>
</body>
</html>
