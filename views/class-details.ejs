<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Class Details</title>
    <style>
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            padding: 10px;
            margin-bottom: 5px;
            background-color: #f0f0f0;
            border-radius: 5px;
        }
        a {
            text-decoration: none;
            color: black;
        }
        button {
            cursor: pointer;
            padding: 10px 20px;
            margin-top: 20px;
            border: none;
            background-color: #007BFF;
            color: white;
            border-radius: 5px;
            font-size: 16px;
        }
        button:hover {
            background-color: #0056b3;
        }
        input, textarea {
            width: 95%;
            padding: 12px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <h1>Class: <%= classInfo.name %></h1>
    <h2>Total Attendance Percentage: <%= totalAttendancePercentage.toFixed(2) %> %</h2>
    <h2>Student List:</h2>
    <ul>
        <% if (studentAttendancePercentages && studentAttendancePercentages.length > 0) { %>
            <% studentAttendancePercentages.forEach(function(student) { %>
                <li><%= student.username %> - Attendance: <%= student.attendancePercentage.toFixed(2) %> %</li>
            <% }) %>
        <% } else { %>
            <li>No students assigned</li>
        <% } %>
    </ul>
    <ul>
    <form action="/attendances/attendance/<%= classInfo._id %>" method="get">
        <button type="submit">Create Attendance Report</button>
    </form>
    </ul>
    <!-- Form to add a new task -->
    <form action="/teachers/create-task/<%= classInfo._id %>" method="post">
        <label for="description">Task Description:</label>
        <textarea id="description" name="description" required></textarea>
        <button type="submit">Add Task</button>
    </form>
</body>
</html>
